	<name>Site Forms - SEBLOD 1.x</name>
	<author>Octopoos</author>
	<creationDate>July 2009</creationDate>
	<authorEmail>contact@seblod.com</authorEmail>
	<authorUrl>http://www.seblod.com</authorUrl>
	<copyright>Copyright (C) 2011 SEBLOD. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<version>1.8.5</version>
	<description>Site Forms - SEBLOD 1.x</description>
	
	<files>
		<filename module="mod_cckjseblod_siteforms">mod_cckjseblod_siteforms.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	
	<params addpath="/administrator/components/com_cckjseblod/elements">
		<param name="typeid" type="type" default="0" label="Content Type" description="DESCRIPTION CONTENT TYPE" />
		<param name="templateid" type="template" default="0" label="Form Template" description="DESCRIPTION TEMPLATE" />
		<param name=" " type="cckjseblod" default="0" label="" description="DESCRIPTION NOTE" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="importer_hidden" type="textarea" default="" label="Value Importer (Hidden)" description="Fieldname(form)=fieldname(content) ex: to_email=company_email (Separated by line break)" rows="8" cols="40" />
		<param name="importer_text" type="textarea" default="" label="Value Importer (Text)" description="Fieldname(form)=fieldname(content) ex: to_name=company_name (Separated by line break)" rows="8" cols="40" />
	</params>
	<params group="advanced">
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
	
</install>
