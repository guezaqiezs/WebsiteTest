<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5">

	<name>Extended Login - SEBLOD 1.x</name>
	<author>Octopoos</author>
	<creationDate>September 2009</creationDate>
	<authorEmail>contact@seblod.com</authorEmail>
	<authorUrl>http://www.seblod.com</authorUrl>
	<copyright>Copyright (C) 2011 SEBLOD. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<version>1.8.5</version>
	<description>Extended Login - SEBLOD 1.x
	<![CDATA[
	<a href="index.php?option=com_modules&client=0">(don't forget to publish it, and select the position) click here</a>
	]]>
	</description>
	
	<languages>
			<language tag="en-GB">en-GB.mod_cckjseblod_login.ini</language>
			<language tag="fr-FR">fr-FR.mod_cckjseblod_login.ini</language>
	</languages>
	
	<files>
		<filename module="mod_cckjseblod_login">mod_cckjseblod_login.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>en-GB.mod_cckjseblod_login.ini</filename>
		<filename>fr-FR.mod_cckjseblod_login.ini</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	
	<params addpath="/administrator/components/com_cckjseblod/elements">
		<param name="typeid" type="type" default="0" label="Content Type" description="DESCRIPTION CONTENT TYPE" />
		<param name="templateid" type="template" default="0" label="Form Template" description="DESCRIPTION TEMPLATE" />
		<param name="menuitemid" type="menuitem" default="" disable="separator" label="Menu ItemId" description="DESCRIPTION MENU ITEMID" />
		<param type="spacer" default=" " />
		<param name="registerlabel" type="text" default="" label="Registration Label" description="DESCRIPTION REGISTRATION LABEL" />
		<param name=" " type="cckjseblod" default="0" label="" description="DESCRIPTION NOTE" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="0">Never</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="pretext" type="textarea" cols="30" rows="5" default="" label="Pre-text" description="PARAMPRETEXT" />
		<param name="posttext" type="textarea" cols="30" rows="5" label="Post-text" description="PARAMPOSTTEXT" />
		<param name="login" type="menuitem" default="" disable="separator" label="Login Redirection URL" description="PARAMLOGINREDIRECTURL" />
		<param name="logout" type="menuitem" default="" disable="separator" label="Logout Redirection URL" description="PARAMLOGOUTREDIRECTURL" />
		<param name="greeting" type="radio" default="1" label="Greeting" description="Show/Hide the simple greeting text">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="name" type="list" default="0" label="Name/Username">
			<option value="0">Username</option>
			<option value="1">Name</option>
		</param>
		<param name="usesecure" type="radio" default="0" label="Encrypt Login Form" description="Submit encrypted login data (requires SSL)">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
	
</install>
